{
	"neoconf": {
		"plugins": {
			"lua_ls": {
				"enabled": true
			}
		}
	},

	// https://luals.github.io/wiki/settings/
	"lspconfig": {
		"lua_ls": {
			"Lua": {
				"format": {
					"enable": true
				},
				"telemetry": {
					"enable": false
				},
				"hint": {
					"enable": true,
					"arrayIndex": "Auto", // "Enable" | "Auto" | "Disable"
					"await": true,
					"paramName": "All", // "All" | "Literal" | "Disable"
					"paramType": true,
					"semicolon": "SameLine", // "All" | "SameLine" | "Disable"
					"setType": false
				}
			}
		},
		"luau_lsp": {
			"sourcemap.autogenerate": false,
		},
	}
}
